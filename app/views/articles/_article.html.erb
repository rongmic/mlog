<% @articles.each do |article| %>
  <article>
    <header><h2><%= link_to article.title, article %></h2></header>
    <p>
      <%= article.content %>
    </p>
    <footer>
      <p>
        <span title="<%= article.created_at %>"><%= date_format article.created_at %></span>
        (
        #<%= link_to article.category.name, article.category %>
      )
      </p>
    </footer>
  </article>
<% end %>
