<div class="large-8 columns">
  <div class="articles">
    <% @articles.each do |article| %>
      <article>
        <header><h2><%= link_to article.title, article %></h2></header>
        <p>
          <%= article.content %>
        </p>
        <footer>
          <p>
            <span title="<%= article.created_at %>"><%= date_format article.created_at %></span>
            (
            #<%= link_to article.category.name, article.category %>
          )
        </p>
      </footer>
    </article>
  <% end %>
</div>
<%= paginate @articles %>
</div>
<div class="large-4 columns">
  <section class="sidebar">
  <div class="row collapse">
    <div class="small-8 columns">
      <input type="text" placeholder="Text For Search">
    </div>
    <div class="small-4 columns">
      <a href="#" class="button prefix">Search</a>
    </div>
  </div>
  </section>

  <section class="sidebar">
    <h4>Categories</h4>
    <ul class="side-nav">
      <% @categories.each do |category| %>
        <li>
          <%= link_to(category) do %>
            <%= category.name %> <kbd><%= category.articles.count %></kbd>
          <% end %>
        </li>
        <li class="divider"></li>
      <% end %>
    </ul>
  </section>

  <section id="hot_article" class="sidebar">
    <h4>Hot Articles</h4>
    <ul class="side-nav">
      <% @articles.each do |article| %>
        <li>
          <%= link_to article.title, article %>
        </li>
        <li class="divider"></li>
      <% end %>
    </ul>
  </section>

  <section id="comments" class="sidebar">
    <h4>Recent Comments</h4>
    <ul class="side-nav">
      <li class="divider"></li>
    </ul>
  </section>
</div>
