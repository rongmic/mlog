<div class="articles">
  <article>
    <header><h2><%= @article.title %></h2></header>
    <p>
      <%= raw markdown @article.content %>
    </p>
    <footer>
      <p>
        <span title="<%= @article.created_at %>"><%= date_format @article.created_at %></span>
        (
        #<%= link_to @article.category.name, @article.category %>
      )
    </p>
  </footer>
</article>
</div>
<div class="page_article">
  <div class="row">
    <div class="large-6 columns">
      <%= link_to(@article.previous_article.title, @article.previous_article,) if @article.previous_article %>
    </div>
    <div class="large-6 columns">
      <%= link_to(@article.next_article.title, @article.next_article, class: "right") if @article.next_article %>
    </div>
  </div>
</div>
