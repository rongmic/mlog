<%= form_for @category, url: admin_categories_path, html: {class: "custom"} do |f| %>
<div class="row">
  <div class="large-8 columns">
    <div class="row">
      <div class="large-12 columns">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
    </div>
  </div>
  <div class="large-4 columns">
    <div class="large-12 columns">
    </div>
  </div>
</div>
<div class="row">
  <div class="large-12 columns">
    <div class="panel submit-panel">
      <%= f.submit "New Category", class: "small button" %>
    </div>
    </div>
  </div>
<% end %>
